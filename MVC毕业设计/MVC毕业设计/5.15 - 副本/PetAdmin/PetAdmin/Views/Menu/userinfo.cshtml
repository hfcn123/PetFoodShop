
@{
    ViewBag.Title = "userinfo";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@section di{

    <form method="post" action="/Menu/Index">
        <table class="table table-striped">
            <tr>
                <td colspan="2">
                    <select id="Select1" name="ddlvalue" class="form-control">
                        <option value="0">全部</option>
                        @{

                            @*foreach (var item in (SelectList)ViewData["ddl"])
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }*@


                        }
                    </select>
                </td>
                <td colspan="4">

                    <input id="Text1" type="text" name="name1" placeholder="用户名称" class="form-control" />
                </td>
                <td>
                    <input id="Button1" type="submit" value="查询" class="btn btn-primary" />
                </td>
            </tr>
        </table>
    </form>

    <div class="table-responsive">
        <div class="card-header">
            <h6 class="text-uppercase mb-0">用户信息表</h6>
        </div>
        <div>
            <table class="table table-striped table-hover card-text">
                <thead>
                    <tr>
                        <th>
                            编号
                        </th>
                        <th>
                            用户名称
                        </th>
                        <th>
                            用户头像
                        </th>
                        <th>
                            用户邮箱
                        </th>
                        <th>
                            用户电话
                        </th>
                        <th>
                            用户性别
                        </th>
                        <th>
                            用户密码
                        </th>
                        <th>
                            是否在线
                        </th>
                        <th>
                            是否是管理员
                        </th>
                        <th>
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{

                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Usid</td>
                                <td>@item.UName</td>
                                <td>
                                    <img src="@item.Uimg" style="height:50px;width:50px" />

                                </td>
                                <td>@item.email</td>
                                <td>@item.Tel</td>
                                <td>@item.sex</td>
                                <td>@item.Pwd</td>
                                <td>@item.onlinet</td>
                                <td>@item.adminid</td>
                                <td>
                                    <input id="Button1" type="button" value="修改" class="btn btn-warning" onclick="edita(@item.Usid)" />
                                    <input id="Button1" type="button" value="删除" class="btn btn-danger" onclick="shanchu(@item.Usid)" />
                                </td>
                            </tr>
                        }

                    }



                </tbody>
            </table>
        </div>
    </div>
}