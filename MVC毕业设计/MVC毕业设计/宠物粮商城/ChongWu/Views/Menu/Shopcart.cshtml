@model  List<ChongWu.Models.cartinfo> 
@{
    ViewBag.Title = "Shopcart";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<script type="text/javascript">


    function jia(id) {


            $.ajax({
                url: '/Menu/jia',
                type: 'post',
                data: { "id": id },
                dataType: 'json',
                success: function (msg) {
                    if (msg > 0) {
                        location.href = '/Menu/Shopcart';

                       
                    } else { alert("添加失败"); }
                }


            });



    }
    function jian(id) {


            $.ajax({
                url: '/Menu/jian',
                type: 'post',
                data: { "id": id },
                dataType: 'json',
                success: function (msg) {
                    if (msg > 0) {
                        location.href = '/Menu/Shopcart';

                        
                    } else { alert("添加失败"); }
                }
            });
    }



    function movecart(id) {
        if (confirm("您确定要移除购物车吗？")) {

            $.ajax({
                url: '/Menu/movecart',
                type: 'post',
                data: { "id": id },
                dataType: 'json',
                success: function (msg) {
                    if (msg > 0) {
                        location.href = '/Menu/Shopcart';

                        alert("移除成功！");
                    } else { alert("移除失败"); }
                }


            });

        }
    }

</script>

